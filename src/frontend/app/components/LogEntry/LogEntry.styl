@import '~Variables.styl'

fontFamily = 'Inconsolata','Source Code Pro', 'Courier New', arial, helvetica, sans-serif

.logEntry
  padding 10px 20px
  border-left 5px solid transparent
  background-color #fff
  margin-bottom 5px
  box-shadow 0 2px 2px rgba(0,0,0,0.1);

.primary
  display flex

.info
  flex 1 1 auto

.actions
  flex 0 0 auto

.message
  font-family fontFamily
  font-size 1.3em

.details
  font-family fontFamily
  background-color #f0f0f0
  padding 10px
  margin-top 10px
  word-wrap break-word
  word-break break-all
  max-height 800px
  overflow auto

.timeStamp
  font-size 0.7em
  color textDimmed

.debug
    border-left-color #eee
.info
  border-left-color #64B5F6
.warn
  border-left-color #FFC107
.error
  border-left-color #D50000
